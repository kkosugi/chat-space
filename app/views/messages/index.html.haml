
.sidebar
   %ul.sidebar__user
      %li.sidebar__user__name
         %p #{current_user.name}
      %li.sidebar__user__btn
         = link_to new_group_path do
            %i.fa.fa-pencil-square-o
         = link_to edit_user_path(current_user) do
            %i.fa.fa-cog

   .sidebar__groups
      - current_user.groups.each do |g|
         %li.sidebar__group
            = g.name
         %li.sidebar__massage まだメッセージはありません

.chat-main.clearfix
   .chat-main__header
      %p.chat-main__header__groupname
         = @group.name
      = link_to edit_group_path(current_user) do
         %p.chat-main__header__edit edit
      %p.chat-main__header__members
         / - @member.each do |m|
         /    = m.name

   .chat-main__body.clearfix
      .chat-main__body__messageslist
         .chat-main__body__messagename

         .chat-main__body__messagetime

   .chat-main__footer__form.clearfix
      = form_for ([@group, @message]) do |f|
         = f.text_field :text, {placeholder: "type a message", size: "40", class: "input" }
         .upload
            = f.label :image do
               %i.fa.fa-picture-o
                  = f.file_field :image, class: "btn"
         = f.submit :send, class: "send"
